/* File: manifest.json
 * -------------------
 * A manifest file (like this one) is used to
 * give Chrome information about your extension.
 *
 * You shouldn't need to change anything in this file
 * unless you're doing extensions.
 *
 * For more details, check out the documentation:
 * https://developer.chrome.com/extensions/manifest
 */

{
  // Required
  "manifest_version": 2,
  "name": "FishingIsFun",
  "version": "0.0.1",

  "options_page": "src/options.html",
  "description": "Productivity Chrome extension that blocks sites, set tasks, and makes fishing fun!",
  "icons": {
    "16": "icons/anchor-16.png",
    "32": "icons/anchor-32.png",
    "48": "icons/anchor-48.png",
    "64": "icons/anchor-64.png",
    "96": "icons/anchor-96.png",
    "128": "icons/anchor-128.png"
  },

  // Put any additional permissions your applications needs here.
  // For a list of possibilities, see
  // https://developer.chrome.com/extensions/declare_permissions
  "permissions": [
    "storage", "tabs" // Allows access to chrome.storage API 
  ],

  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/fish-19.png",
    "default_title": "Fishing is Fun",
    "default_popup": "src/popup.html"
  }
