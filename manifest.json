/* File: manifest.json
 * -------------------
 * A manifest file (like this one) is used to
 * give Chrome information about your extension.
 *
 * For more details, check out the documentation:
 * https://developer.chrome.com/extensions/manifest
 */

{
  // Required
  "manifest_version": 2,
  "name": "FishingIsFun",
  "version": "0.0.1",
  "options_page": "src/options.html",
  "description": "A productivity Chrome extension that blocks sites, creates tasks, sets timers, and makes fishing fun!",
  "icons": {
    "16": "icons/anchor-16.png",
    "32": "icons/anchor-32.png",
    "48": "icons/anchor-48.png",
    "64": "icons/anchor-64.png",
    "96": "icons/anchor-96.png",
    "128": "icons/anchor-128.png"
  },
  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/anchor-19.png",
    "default_title": "Fishing is Fun",
    "default_popup": "src/popup.html"
  },

  "web_accessible_resources": [
    "images/*.png"
  ]

}
